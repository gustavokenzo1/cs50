#include <ctype.h>
#include <cs50.h>
#include <stdio.h>
#include <string.h>

//Used help from the video to understand the idea

// Points assigned to each letter of the alphabet
int POINTS[] = {1, 3, 3, 2, 1, 4, 2, 4, 1, 8, 5, 1, 3, 1, 1, 3, 10, 1, 1, 1, 1, 4, 4, 8, 4, 10};

int compute_score(string word);

int main(void)
{
    // Get input words from both players
    string word1 = get_string("Player 1: ");
    string word2 = get_string("Player 2: ");
    

    // Score both words
    int score1 = compute_score(word1);
    int score2 = compute_score(word2);

    // TODO: Print the winner
    if (score1 > score2) //Score 1 is greater than score 2
    {
        printf("Player 1 wins!\n");
    }
    
    else if (score2 > score1) //Score 2 is greater than score 1
    {
        printf("Player 2 wins!\n");
    }
    
    else //No need to specify, score 1 = score 2 is the only other option
    {
        printf("Tie!\n");
    }
}



int compute_score(string word)
{
    int score = 0;
    // TODO: Compute and return score for string
    for (int i = 0, size = strlen(word); i < size; i++)
        //Calculates the size of the word so we know the "ith" position of each char
    {
        if (isupper(word[i]))
        {
            score = score + POINTS[word[i] - 'A']; 
            //Example: if the char is 'c', and 'c' = 67 in ASCII, 67 - 65 will get the 3rd value of POINTS[]
        }
        
        if (islower(word[i])) //if the ith char is lower, it is +32 in ASCII
        {
            score = score + POINTS[word[i] - 'a'];
        }
    }
    //Else is implicit
    return score;
}
